{
  "name": "malibu",
  "version": "1.0.0",
  "description": "Quintype Starter PWA",
  "main": "start.js",
  "repository": "git@github.com:quintype/malibu.git",
  "author": "Tejas Dinkar <tejas@gja.in>",
  "license": "MIT",
  "dependencies": {
    "@quintype/components": "^1.39.0",
    "@quintype/framework": "^2.80.0",
    "@quintype/seo": "^1.8.1",
    "lodash": "^4.17.11",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "superagent": "^3.8.3",
    "superagent-promise": "^1.1.0",
    "wretch": "^1.4.1"
  },
  "devDependencies": {
    "@quintype/build": "^2.7.0",
    "autoprefixer": "^8.6.4",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-dynamic-import-node": "^1.2.0",
    "babel-plugin-transform-assets-import-to-string": "^1.0.1",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-es2015-tree-shaking": "^1.0.1",
    "babel-preset-react": "^6.24.1",
    "css-loader": "^0.28.11",
    "duplicate-package-checker-webpack-plugin": "^3.0.0",
    "eslint": "^5.7.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^21.26.2",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-standard": "^4.0.0",
    "file-loader": "^1.1.11",
    "history": "^4.7.2",
    "husky": "^1.1.2",
    "jest": "^22.4.3",
    "lint-staged": "^8.0.2",
    "mocha": "^4.0.1",
    "node-sass": "^4.9.4",
    "nodemon": "^1.18.4",
    "postcss-loader": "^2.1.5",
    "precss": "^3.1.2",
    "prettier": "1.14.3",
    "react-test-renderer": "^16.3.2",
    "sass-loader": "^6.0.7",
    "style-loader": "^0.19.0",
    "stylelint": "^8.3.1",
    "stylelint-config-css-modules": "^1.3.0",
    "stylelint-config-recommended-scss": "^3.2.0",
    "stylelint-scss": "^3.3.2",
    "webpack": "^4.21.0",
    "webpack-bundle-analyzer": "^2.13.1",
    "webpack-cli": "^2.0.13",
    "webpack-common-shake": "^2.1.0",
    "webpack-dev-server": "^3.1.9"
  },
  "babel": {
    "env": {
      "test": {
        "presets": [
          "env",
          "react"
        ]
      }
    }
  },
  "scripts": {
    "analyze-stats": "NODE_ENV=production ANALYZE_STATS=true npx webpack --profile --mode=production -p",
    "asset-server": "webpack-dev-server --hot",
    "compile": "webpack",
    "dev-server": "nodemon --watch app/server --watch app/isomorphic --exec 'node start.js'",
    "prune-packages": "rm -rf node_modules && npm install && npm dedupe",
    "start": "node start.js",
    "test": "jest",
    "lint:js": "npx eslint './app/**/*.{js,jsx}'",
    "lint:js:ci": "npx eslint $(git diff --pretty='' --diff-filter=d --name-only origin/master..HEAD -- '*.js' '*.jsx') ./start.js",
    "lint:css": "npx stylelint './app/**/*.{scss,css}'",
    "lint:css:ci": "npx stylelint $(git diff --pretty='' --diff-filter=d --name-only origin/master..HEAD -- '*.css' '*.scss') ./app/assets/stylesheets/app.scss",
    "lint:ci": "npm run lint:js:ci && npm run lint:css:ci"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "npx eslint --fix",
      "git add"
    ],
    "*.{css,scss}": [
      "npx prettier --write",
      "npx stylelint",
      "git add"
    ]
  }
}
